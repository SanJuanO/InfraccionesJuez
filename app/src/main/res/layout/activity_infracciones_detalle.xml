<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Infracciones">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tituloma"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif"

                    android:freezesText="true"
                    android:gravity="center"
                    android:lines="1"
                    android:background="@color/ABLUE"

                    android:text="      Pago de Infracciónes"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    tools:ignore="RtlCompat" />


                <Button
                    android:id="@+id/listablu"
                    style="@style/custom_btn_orange"
                    android:drawableTint="@color/ABLUE"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_height="30dp"
                    android:textSize="8dp"

                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:drawableStart="@android:drawable/stat_sys_data_bluetooth"
                    android:text="Dispositivos sincornizados"
                    android:drawableLeft="@android:drawable/stat_sys_data_bluetooth" />






                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/tituloma"
                    android:id="@+id/ll3"
android:layout_marginTop="10dp"
                    android:weightSum="4"
                    >
                    <LinearLayout
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:text="Fecha:"
                            android:textColor="@color/ABLUE"
                            android:textSize="14dp" />

                        <EditText
                            android:id="@+id/afecha"
                            android:enabled="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:textColor="@color/ablack"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:textSize="14dp" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="@color/ABLUE" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
android:layout_weight="2"                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:text="Hora:"
                            android:textColor="@color/ABLUE"
                            android:textSize="14dp" />

                        <EditText
                            android:id="@+id/ahora"
                            android:enabled="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/ablack"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:textSize="14dp" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="@color/ABLUE" />


                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/ll0"
                    android:layout_below="@id/ll3"
                    android:weightSum="4"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@+id/ddescrip"
                        android:text="Folio:"

                        android:textColor="@color/ABLUE"
                        android:textSize="14dp" />

                    <EditText
                        android:id="@+id/folioinf"
                        android:layout_width="match_parent"
                        android:enabled="false"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_below="@+id/t1"
                        android:text="12324"
                        android:layout_marginTop="0dp"
                        android:textColor="@color/ablack"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textSize="14dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/ABLUE" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/ll4"
                    android:layout_below="@id/ll0"
                    android:weightSum="4"
                    >
                    <TextView
                        android:id="@+id/t1"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@+id/ddescrip"
                        android:text="Nombre del Inspector:"

                        android:textColor="@color/ABLUE"
                        android:textSize="14dp" />

                    <EditText
                        android:id="@+id/nombreoficia"
                        android:layout_width="match_parent"
                        android:enabled="false"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_below="@+id/t1"
android:text="Agente"
                        android:layout_marginTop="0dp"
                        android:textColor="@color/ablack"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textSize="14dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/ABLUE" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/ll5"
                    android:layout_below="@id/ll4"
                    android:weightSum="4"
                    >
                    <TextView
                        android:id="@+id/t2"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@+id/dclase"
                        android:text="Numero de parquimetro:"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"

                        android:textColor="@color/ABLUE"
                        android:textSize="14dp" />

                    <EditText
                        android:id="@+id/nparquimetro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_below="@+id/t2"
                        android:layout_marginTop="0dp"
                        android:enabled="false"
android:text="12345334"
                        android:textColor="@color/ablack"
                        android:textSize="14dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/ABLUE" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/ll66"
                    android:layout_below="@id/ll5"
                    android:weightSum="4"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@+id/dmodelo"
                        android:text="Marca:"


                        android:textColor="@color/ABLUE"
                        android:textSize="14dp" />

                    <EditText
                        android:id="@+id/marca"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_below="@+id/t2"
                        android:layout_marginTop="0dp"
                        android:enabled="false"
                        android:text=""
                        android:textColor="@color/ablack"
                        android:textSize="14dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/ABLUE" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/ll67"
                    android:layout_below="@id/ll66"
                    android:weightSum="4"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@+id/dmodelo"
                        android:text="Tipo:"


                        android:textColor="@color/ABLUE"
                        android:textSize="14dp" />

                    <EditText
                        android:id="@+id/tipo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_below="@+id/t2"
                        android:layout_marginTop="0dp"
                        android:enabled="false"
                        android:text=""
                        android:textColor="@color/ablack"
                        android:textSize="14dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/ABLUE" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/ll6"
                    android:layout_below="@id/ll67"
                    android:weightSum="4"
                    >
                    <TextView
                        android:id="@+id/t3"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@+id/dmodelo"
                        android:text="Falta administrativa:"


                        android:textColor="@color/ABLUE"
                        android:textSize="14dp" />

                    <EditText
                        android:id="@+id/faltaadministrativa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_below="@+id/t2"
                        android:layout_marginTop="0dp"
                        android:enabled="false"
                        android:text="Invacion de cajon"
                        android:textColor="@color/ablack"
                        android:textSize="14dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/ABLUE" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll7"
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    android:layout_below="@id/ll6"
                    android:layout_marginTop="7dp"
                    android:orientation="vertical"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/t00"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:text="Costo 2.4 UMAS:"


                        android:textColor="@color/ABLUE"
                        android:textSize="14dp" />

                    <EditText
                        android:id="@+id/ncostos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/t00"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="10dp"
                        android:enabled="false"
                        android:text="$200.00"
                        android:textColor="@color/ablack"
                        android:textSize="14dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/ABLUE" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/ll8"
                    android:layout_below="@id/ll7"
                    android:weightSum="4"
                    >

                    <TextView
                        android:id="@+id/t5"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"

                        android:text="Garantia:"


                        android:textColor="@color/ABLUE"
                        android:textSize="14dp" />

                    <EditText
                        android:id="@+id/garantia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_below="@+id/t2"
                        android:layout_marginTop="0dp"
                        android:enabled="false"
                        android:text="Placa"
                        android:textColor="@color/ablack"
                        android:textSize="14dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/ABLUE" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/ll9"
                    android:layout_below="@id/ll8"
                    android:weightSum="4"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"

                        android:text="Placa:"


                        android:textColor="@color/ABLUE"
                        android:textSize="14dp" />


                    <EditText
                        android:id="@+id/plac"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/t5"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="10dp"
                        android:enabled="false"
                        android:textColor="@color/ablack"
                        android:textSize="14dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/ABLUE" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/l10"
                    android:layout_below="@id/ll9"
                    android:weightSum="4"
                    >
                    <TextView
                        android:id="@+id/t6"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:text="Evidencia:"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"

                        android:textColor="@color/ABLUE"
                        android:textSize="14dp" />


                    <ImageView
                        android:id="@+id/fotoubc"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"

                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        app:srcCompat="@android:drawable/ic_menu_camera" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/lluser"
                        android:layout_below="@id/fotoubc"
                        android:weightSum="4"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginLeft="10dp"

                            android:text="Telefono de quíen paga:"


                            android:textColor="@color/ABLUE"
                            android:textSize="14dp" />


                        <EditText
                            android:id="@+id/telefonop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/t5"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="0dp"
                            android:inputType="number"
                            android:layout_marginEnd="10dp"
                            android:textColor="@color/ablack"
                            android:textSize="14dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="@color/ABLUE" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/lluser2"
                        android:layout_below="@id/lluser"
                        android:weightSum="4"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginLeft="10dp"

                            android:text="Nombre de quíen paga:"


                            android:textColor="@color/ABLUE"
                            android:textSize="14dp" />


                        <EditText
                            android:id="@+id/userp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/t5"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="10dp"
                            android:textColor="@color/ablack"
                            android:textSize="14dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="@color/ABLUE" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/buttonpagar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        style="@style/btnred"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:text="Pagar"
                        />

                    <Button
                        android:id="@+id/btndesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"


                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        style="@style/btnred"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:text="Descuento"
                        />




                    <TextView
                        android:id="@+id/t99"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_below="@id/ll9"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="INE:"
                        android:textColor="@color/ABLUE"
                        android:textSize="14dp" />



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/lla"
                        android:layout_below="@id/t99"
                        android:weightSum="4"
                        >



                        <ImageView
                            android:id="@+id/inef"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_weight="2"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            app:srcCompat="@android:drawable/ic_menu_camera" />
                        <ImageView
                            android:id="@+id/inea"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_weight="2"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            app:srcCompat="@android:drawable/ic_menu_camera" />




                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/relative_imagen"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:layout_marginTop="20dp"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/img_dibujo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:scaleType="centerCrop" />

                        <Button
                            android:id="@+id/btn_dibujar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:background="@drawable/btn_semitransparente"
                            android:paddingTop="10dp"
                            android:text="Firma"
                            android:textColor="@color/ablack"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </LinearLayout>








            </RelativeLayout>
        </LinearLayout>



    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>