<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="custom_btn_orange">
        <item name="android:background">@drawable/selector_btn_orange</item>
        <item name="android:textColor">@color/ABLUE</item>
    </style>

    <style name="btnred">
        <item name="android:background">@drawable/selector_btn_red</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="editext">
        <item name="android:background">@drawable/selector_edit</item>
        <item name="android:textColor">@color/ablack</item>


    </style>


    <style name="spinner_style" >
        <item name="android:background">@drawable/edit</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">@color/ablack</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>
</resources>
